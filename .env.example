# Claude Code Anywhere Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED: Email Channel
# =============================================================================

# Email account for sending notifications (the "Claude" account)
EMAIL_USER=claude-notify@gmail.com
EMAIL_PASS=your-16-char-app-password

# Your email to receive notifications
EMAIL_RECIPIENT=you@example.com

# =============================================================================
# OPTIONAL: Email Server Settings (defaults to Gmail)
# =============================================================================

# SMTP for sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# IMAP for receiving replies
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
EMAIL_POLL_INTERVAL_MS=5000

# =============================================================================
# OPTIONAL: Telegram Channel
# =============================================================================
# To enable Telegram notifications, set both of these:
# 1. Create a bot via @BotFather and copy the token
# 2. Get your chat ID by messaging @userinfobot

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# REQUIRED: Logging Settings
# =============================================================================

# Maximum log file size in MB before rotation
LOG_MAX_SIZE_MB=10

# Number of rotated log files to keep per day
LOG_MAX_ROTATED_FILES=5

# =============================================================================
# OPTIONAL: Bridge Server Settings
# =============================================================================

BRIDGE_PORT=3847
BRIDGE_URL=http://localhost:3847
