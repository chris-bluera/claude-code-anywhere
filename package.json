{
  "name": "claude-code-anywhere",
  "version": "0.3.3",
  "description": "Email notifications and bidirectional communication for Claude Code",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "server": "node dist/cli.js server",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check:quiet": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" --log-level warn && echo '✓ Format check passed'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:deadcode": "knip --no-exit-code",
    "lint:deadcode:strict": "knip",
    "typecheck": "tsc --noEmit",
    "precommit": ".husky/pre-commit",
    "prepush": ".husky/pre-push",
    "lint:quiet": "eslint src/ --quiet && echo '✓ Lint passed' || { echo '❌ ESLint errors'; exit 1; }",
    "lint:deadcode:quiet": "knip --no-exit-code --quiet 2>&1 | grep -E '^(Unused|Configuration)' || echo '✓ No unused code'",
    "typecheck:quiet": "tsc --noEmit --pretty false && echo '✓ Type check passed'",
    "test:changed:quiet": "vitest run --changed --reporter=dot --silent 2>&1 | tail -3",
    "test:all": "vitest run",
    "test:coverage:quiet": "vitest run --coverage --reporter=dot --silent 2>&1 | grep -v '\\[ERROR\\]' | grep -v '\\[WARN\\]' | grep -E '(FAIL|Test Files|Tests.*passed|Coverage|threshold|does not meet|\\|.*[0-9])' | tail -20",
    "build:quiet": "tsc && echo '✓ Build complete'",
    "commitlint": "commitlint --edit",
    "audit": "npm i --package-lock-only && npm audit; EXIT=$?; rm -f package-lock.json; exit $EXIT",
    "audit:quiet": "npm i --package-lock-only 2>/dev/null && npm audit 2>&1 | tail -10; rm -f package-lock.json",
    "update": "bun update",
    "prepare": "husky",
    "version:major": "commit-and-tag-version --release-as major --skip.commit --skip.tag",
    "version:minor": "commit-and-tag-version --release-as minor --skip.commit --skip.tag",
    "version:patch": "commit-and-tag-version --release-as patch --skip.commit --skip.tag",
    "release:patch": "commit-and-tag-version --release-as patch && git push --follow-tags",
    "release:minor": "commit-and-tag-version --release-as minor && git push --follow-tags",
    "release:major": "commit-and-tag-version --release-as major && git push --follow-tags"
  },
  "author": "Bluera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueraai/claude-code-anywhere.git"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "imapflow": "^1.2.4",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@types/nodemailer": "^7.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "commit-and-tag-version": "^12.6.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "knip": "^5.80.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  }
}
